---
cluster: "ubelix"

# "form" defines the fields shown to the user in the OnDemand interface.
form:
  - audio_file:
      widget: "file_field"
      label: "Audio File"
      help: "Upload your audio file (e.g., .mp3, .wav). Required."
      required: true

  - task:
      widget: "select"
      label: "Task Type"
      options:
        - ["Transcribe", "transcribe"]
        - ["Translate", "translate"]
      value: "transcribe"
      help: "Choose 'transcribe' to convert speech to text in the same language, or 'translate' to translate into English."

  - language:
      widget: "text_field"
      label: "Language Code"
      value: "de"
      help: "Specify the language code (default: de)."

  - model:
      widget: "select"
      label: "Model Size"
      options:
        - ["Large-v3 (default)", "large-v3"]
        - ["Medium", "medium"]
        - ["Small", "small"]
        - ["Tiny", "tiny"]
      value: "large-v3"
      help: "Choose your Whisper model size. Large-v3 is default."

