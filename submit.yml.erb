---
batch_connect:
  template: "basic"

  with_tmpdir: true


script:
  job_name: "whisper_transcriber"


  output_file: "whisper_output_%j.log"
  error_file:  "whisper_error_%j.log"
  
  job_environment:
    AUDIO_FILE: "<%= audio_file %>"
    TASK_MODE: "<%= task %>"
    LANGUAGE_MODE: "<%= language %>"
    MODEL_MODE: "<%= model %>"

  # slurm options
  native:
    - "--partition=<%= partition %>"
    - "--qos=<%= qos %>"
    - "--gres=<%= gpu %>"
    - "--mem-per-cpu=8G"
    - "--cpus-per-task=4"
